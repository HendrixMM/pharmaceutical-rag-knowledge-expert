[flake8]
# Maximum line length
max-line-length = 120

# Error codes to ignore
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: imported but unused (handled by isort and mypy)
    # F841: local variable is assigned to but never used (common in development)

# Error codes to always report
select =
    E,F,W,C,N

# Directories to exclude
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    tmptest,
    tmptest2,
    pubmed_cache

# Files to exclude
per-file-ignores =
    # Tests can have unused imports and longer lines
    tests/*.py:F401,F811,E501
    # Examples can be more relaxed
    examples/*.py:F401,E501
    # Scripts can have some flexibility
    scripts/*.py:F401,E501
    # Legacy files (gradually improve)
    src/pubmed_scraper.py:E501,F401
    src/enhanced_rag_agent.py:E501,F401
    src/medical_guardrails.py:E501,F401

# Complexity settings
max-complexity = 12
max-cognitive-complexity = 15

# Import order settings (complementing isort)
import-order-style = google
application-import-names = src

# Docstring settings
docstring-convention = google
require-return-section-when-returning-nothing = false

# Naming conventions
classmethod-decorators = classmethod
staticmethod-decorators = staticmethod

# McCabe complexity plugin settings
hang-closing = true